---
import { Icons } from '@/components/ui/icons';
---

<footer class="bg-background border-t mt-8">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-wrap justify-between">
      <div class="w-full md:w-1/4 mb-4 md:mb-0">
        <h2 class="text-xl font-bold mb-4">SmartFlow</h2>
        <p class="text-muted-foreground">Intelligent Workflow Solutions</p>
      </div>
      <div class="w-full md:w-1/4 mb-4 md:mb-0">
        <h3 class="text-lg font-semibold mb-2">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/features" class="text-foreground hover:text-primary">Features</a></li>
          <li><a href="/pricing" class="text-foreground hover:text-primary">Pricing</a></li>
          <li><a href="/about" class="text-foreground hover:text-primary">About</a></li>
          <li><a href="/contact" class="text-foreground hover:text-primary">Contact</a></li>
        </ul>
      </div>
      <div class="w-full md:w-1/4 mb-4 md:mb-0">
        <h3 class="text-lg font-semibold mb-2">Connect</h3>
        <div class="flex space-x-4">
          <a href="#" class="text-foreground hover:text-primary"><Icons.twitter className="h-6 w-6" /></a>
          <a href="#" class="text-foreground hover:text-primary"><Icons.facebook className="h-6 w-6" /></a>
          <a href="#" class="text-foreground hover:text-primary"><Icons.linkedin className="h-6 w-6" /></a>
        </div>
      </div>
    </div>
    <div class="mt-8 text-center text-muted-foreground">
      &copy; 2023 SmartFlow. All rights reserved.
    </div>
  </div>
</footer>